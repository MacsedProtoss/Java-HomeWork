<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/add_reminder_title"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/add_reminder_name"
        android:inputType="textPersonName"
        android:autofillHints="" />

    <EditText
        android:id="@+id/add_description"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/add_reminder_discription"
        android:inputType="textMultiLine"
        android:minLines="6"/>


    <Spinner
        android:id="@+id/add_spin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/add_reminder_spin" />

    <EditText
        android:id="@+id/add_endTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/add_reminder_endTime"
        android:inputType="datetime" />

    <EditText
        android:id="@+id/add_repeatTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/add_reminder_repeatTime"
        android:inputType="datetime"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/add_stride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/add_reminder_stride"
        android:inputType="datetime"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/add_sub"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/add_reminder_sub"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="invisible" />

</LinearLayout>